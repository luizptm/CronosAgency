@model IEnumerable<CronosAgency.Models.Post>

@{
    ViewData["Title"] = "Posts";
}

<h1>Posts do Blog</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="./@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
