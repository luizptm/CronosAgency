@model IEnumerable<CronosAgency.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>Lista de Usuários</h1>
<button asp-action="Create" class="btn btn-primary">Adicionar novo</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastTimePasswordChanged)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastTimePasswordChanged)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary m-1">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary m-1">Ver</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
